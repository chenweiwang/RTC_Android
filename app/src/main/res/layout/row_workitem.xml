<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gapMedium"
        android:layout_marginLeft="@dimen/gapMedium"
        android:layout_marginRight="@dimen/gapMedium"
        android:layout_marginEnd="@dimen/gapMedium"
        android:layout_marginTop="@dimen/gapMedium"
        android:layout_marginBottom="@dimen/gapSmall">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Repository name"
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Headline"
            android:textColor="?colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif"
            android:lines="1"
            android:ellipsize="end" />

        <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="Owner name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner"
            android:maxLines="1"
            android:layout_below="@+id/title"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_marginLeft="@dimen/gapMedium"
            android:layout_marginTop="@dimen/gapSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Description"
            android:id="@+id/description"
            style="@style/TextAppearance.AppCompat.Body1"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/owner"
            android:layout_marginLeft="@dimen/gapMedium" />

    </RelativeLayout>

</LinearLayout>
